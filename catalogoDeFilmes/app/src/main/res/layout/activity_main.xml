<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cinema"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catálogo de filmes"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:id="@+id/imageViewTerminator2"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/terminator2poster"
        />

    <ImageView
        android:id="@+id/imageViewRockyBalboa"
        android:layout_width="200dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/rockybalboa"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/imageViewTerminator2"
        />

    <ImageView
        android:id="@+id/imageUltimoHomem"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_marginTop="270dp"
        app:srcCompat="@drawable/ultimohomem" />

    <ImageView
        android:id="@+id/imageViewDragaoBranco"
        android:layout_width="200dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/dragaobranco"
        android:layout_toRightOf="@+id/imageUltimoHomem"
        android:layout_marginTop="270dp"
        />

    <ImageView
        android:id="@+id/imageViewMotoqueiroFantasma"
        android:layout_width="200dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/motoqueirofantasma"
        android:layout_marginTop="480dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btnAcessarCatalogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="Acessar catálogo"
        />


</RelativeLayout>