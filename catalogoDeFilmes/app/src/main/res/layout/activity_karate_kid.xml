<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KarateKid"
    android:background="@drawable/karatepaper"
    >

    <ImageView
        android:id="@+id/imgKarate"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/karatefinal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:text="Karatê Kid"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="O adolescente Daniel LaRusso se envolve
         \ncom a ex-namorada do valentão da escola
         \ne começa a ser atormentado por sua
         \ngangue. Para sua sorte, ele conta com os
         \nensinamentos do senhor Miyagi, um mestre
         \nde karatê que o prepara para autodefesa e
         \ntambém para um importante campeonato."
        />

    <Button
        android:id="@+id/btnKarateCatalogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/black"
        android:text="Voltar ao catálogo"
        />

    <Button
        android:id="@+id/btnKarateInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/black"
        android:text="Voltar ao inicio"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_centerHorizontal="true"
        android:text="Nota dada pelos críticos: 95/100"
        android:textSize="20dp"
        android:textColor="@color/white"
        />


</RelativeLayout>