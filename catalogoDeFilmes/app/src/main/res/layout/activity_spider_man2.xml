<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpiderMan2"
    android:background="@drawable/spiderwallpaper">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:text="Homem-Aranha 2"
        />

    <ImageView
        android:id="@+id/imgSpider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bancoluta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:textSize="20dp"
        android:text="Peter é um estudante do ensino médio
        \nque trabalha na área de jornalismo, certo dia
        \nem uma excursão de escola que tinha o
        \ndestino há um lugar de experimentos, foi
        \nmordido por uma aranha, no dia seguinte
        \ndescobriu que tinha poderes de uma aranha
        \niniciando assim sua vida de super-herói"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/btnSpiderinicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/black"
        android:text="Voltar ao catálogo"
        />

    <Button
        android:id="@+id/btnSpiderCatalogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/black"
        android:text="Voltar ao inicio"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_centerHorizontal="true"
        android:text="Nota dada pelos críticos: 100/100"
        android:textSize="20dp"
        android:textColor="@color/white"
        />

</RelativeLayout>