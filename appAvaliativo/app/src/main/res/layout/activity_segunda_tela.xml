<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".segundaTela">

    <TextView
        android:id="@+id/txtview1SegundaTela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Algumas aplicações abaixo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textSize="30dp"
        />
    <Button
        android:id="@+id/btn1Inversor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inversor de palavras"
        android:layout_below="@+id/txtview1SegundaTela"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />
    <Button
        android:id="@+id/btnPPT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedra, Papel, Tesoura"
        android:layout_below="@+id/btn1Inversor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />
    <Button
        android:id="@+id/btncdSecreto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código secreto"
        android:layout_below="@+id/btnPPT"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />
    <Button
        android:id="@+id/btnRandom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Randomizador de palavras"
        android:layout_below="@+id/btncdSecreto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />

    <Button
        android:id="@+id/btnvoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Voltar"
        android:backgroundTint="@color/black"
        />


</RelativeLayout>